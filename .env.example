# Meta Educação - Variáveis de Ambiente
# Copie este arquivo para .env e configure os valores

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL="postgresql://usuario:senha@localhost:5432/meta_educacao"
PGHOST="localhost"
PGPORT="5432"
PGUSER="seu_usuario"
PGPASSWORD="sua_senha_super_segura"
PGDATABASE="meta_educacao"

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
# IMPORTANTE: Gere uma chave forte para produção!
# Exemplo: openssl rand -base64 32
JWT_SECRET="sua-chave-jwt-super-segura-com-pelo-menos-32-caracteres"

# ==============================================
# SERVER CONFIGURATION
# ==============================================
NODE_ENV="development"
PORT="5000"
ADMIN_PORT="5001"
ENABLE_ADMIN_SERVER="true"

# ==============================================
# CORS CONFIGURATION
# ==============================================
# Desenvolmento
PUBLIC_ALLOWED_ORIGINS="http://localhost:5000,http://localhost:3000"
ADMIN_ALLOWED_ORIGINS="http://localhost:5001"

# Produção (descomente e configure)
# PUBLIC_ALLOWED_ORIGINS="https://seu-dominio.com,https://www.seu-dominio.com"
# ADMIN_ALLOWED_ORIGINS="http://localhost:5001"

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
MAX_FILE_SIZE="52428800"  # 50MB em bytes
UPLOAD_PATH="./uploads"

# ==============================================
# PERFORMANCE CONFIGURATION
# ==============================================
# Limites de memória Node.js
NODE_OPTIONS="--max-old-space-size=2048"

# ==============================================
# REDIS CONFIGURATION (Opcional)
# ==============================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# ==============================================
# EMAIL CONFIGURATION (Para futuras implementações)
# ==============================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="seu-email@gmail.com"
SMTP_PASSWORD="sua-senha-do-app"
EMAIL_FROM="noreply@seu-dominio.com"

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL="info"  # debug, info, warn, error
LOG_FILE="./logs/app.log"

# ==============================================
# BACKUP CONFIGURATION
# ==============================================
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"  # Cron: todo dia às 2h da manhã
BACKUP_RETENTION_DAYS="30"

# ==============================================
# MONITORING & ANALYTICS
# ==============================================
# Google Analytics (opcional)
GA_TRACKING_ID=""

# Sentry para monitoramento de erros (opcional)
SENTRY_DSN=""

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================
# Debug mode
DEBUG="meta-educacao:*"

# Hot reload
VITE_HMR_PORT="24678"

# ==============================================
# DOCKER SPECIFIC
# ==============================================
# Para uso com Docker Compose
POSTGRES_DB="meta_educacao"
POSTGRES_USER="meta_user"
POSTGRES_PASSWORD="sua_senha_postgres_super_segura"

# ==============================================
# PRODUCTION ONLY
# ==============================================
# SSL Configuration
SSL_CERT_PATH="/etc/ssl/certs/cert.pem"
SSL_KEY_PATH="/etc/ssl/private/key.pem"

# External Services
CDN_URL="https://cdn.seu-dominio.com"
STORAGE_PROVIDER="local"  # local, aws-s3, cloudinary

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_AUTH_MAX_REQUESTS="5"
RATE_LIMIT_ADMIN_MAX_REQUESTS="20"

# ==============================================
# SECURITY HEADERS
# ==============================================
# Content Security Policy
CSP_SCRIPT_SRC="'self' 'unsafe-inline' 'unsafe-eval'"
CSP_STYLE_SRC="'self' 'unsafe-inline' https://fonts.googleapis.com"
CSP_FONT_SRC="'self' https://fonts.gstatic.com"
CSP_IMG_SRC="'self' data: blob:"

# ==============================================
# FEATURE FLAGS
# ==============================================
FEATURE_REGISTRATION_ENABLED="true"
FEATURE_EMAIL_VERIFICATION="false"
FEATURE_TWO_FACTOR_AUTH="false"
FEATURE_COURSE_COMMENTS="true"
FEATURE_LIVE_CHAT="false"

# ==============================================
# MOBILE APP (Para futuras implementações)
# ==============================================
MOBILE_API_VERSION="v1"
MOBILE_DEEP_LINK_URL="metaeducacao://app"

# ==============================================
# PAYMENT INTEGRATION (Para futuras implementações)
# ==============================================
STRIPE_PUBLIC_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# ==============================================
# SOCIAL LOGIN (Para futuras implementações)
# ==============================================
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
FACEBOOK_APP_ID=""
FACEBOOK_APP_SECRET=""

# ==============================================
# NOTIFICATIONS
# ==============================================
PUSH_NOTIFICATION_ENABLED="false"
FIREBASE_SERVER_KEY=""
WEBPUSH_VAPID_PUBLIC_KEY=""
WEBPUSH_VAPID_PRIVATE_KEY=""